<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Coindex.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Coindex.App.Views"
    FlyoutBehavior="Flyout"
    Title="Coindex">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Collection"
        ContentTemplate="{DataTemplate view:CollectableItemsPage}"
        Route="CollectableItemsPage" />

    <ShellContent
        Title="Add new item"
        ContentTemplate="{DataTemplate view:CollectableItemEditPage}"
        Route="CollectableItemEditPage" />

    <ShellContent
        Title="Tags"
        ContentTemplate="{DataTemplate view:TagsPage}"
        Route="TagsPage" />

</Shell>
